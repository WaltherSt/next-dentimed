generator client {
  provider = "postgresql"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model clinical_h {
  id         String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  diagnosis  String?
  patient_id String?  @db.Uuid
  patient    patient? @relation(fields: [patient_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model patient {
  id               String       @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  n_documento      BigInt?
  tipo_documento   String?      @db.VarChar(255)
  nombres          String?      @db.VarChar(255)
  apellidos        String?      @db.VarChar(255)
  genero           String?      @db.VarChar(255)
  fecha_nacimiento DateTime?    @db.Date
  telefono         BigInt?
  correo           String?      @unique @db.VarChar(255)
  user_id          String?      @db.Uuid
  clinical_h       clinical_h[]
  users            users?       @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model users {
  id       String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name     String    @db.VarChar(255)
  email    String    @unique
  password String
  patient  patient[]
}
